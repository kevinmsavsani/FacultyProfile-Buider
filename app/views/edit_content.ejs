<!--------------------------- Templete body  ---------------------------->

<div class="container">
  <div class="row">

    <!----------- Including  Side Navigation bar ------------------->

      <%include navbar.ejs%>

    <div class="col-sm-9">
      <div class="panel panel-default">
        <div class="panel-heading resume-heading">
          <div class="row">
            <div class="col-lg-12">
              <div class="col-xs-12 col-sm-4">
                <figure>
                  <img src="http://graph.facebook.com/<%= user.facebookID%>/picture?width=150" class="img-circle" alt="User Image" />
                </figure>
                <div class="row">
                  <div class="col-xs-12 social-btns">
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-google">
                        <i class="fa fa-google"></i> </a>
                    </div>
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-facebook">
                        <i class="fa fa-facebook"></i> </a>
                    </div>
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-twitter">
                        <i class="fa fa-twitter"></i> </a>
                    </div>
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-linkedin">
                        <i class="fa fa-linkedin"></i> </a>
                    </div>
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-github">
                        <i class="fa fa-github"></i> </a>
                    </div>
                    <div class="col-xs-3 col-md-1 col-lg-1 social-btn-holder">
                      <a href="#" class="btn btn-social btn-block btn-stackoverflow">
                        <i class="fa fa-stack-overflow"></i> </a>
                    </div>
                  </div>


                </div>
              </div>
              <div class="col-xs-12 col-sm-8">
                <ul class="list-group">
                  <li class="list-group-item"><i class="glyphicon glyphicon-user"></i> <%=user.name%> </li>
                  <li class="list-group-item"><i class="glyphicon glyphicon-sound-dolby"></i> <%=user.department%></li>
                  <li class="list-group-item"><i class="glyphicon glyphicon-globe"></i> <%=user.room%> </li>
                  <li class="list-group-item"><i class="fa fa-phone"></i> <%=user.contactNo%> </li>
                  <li class="list-group-item"><i class="fa fa-envelope"></i> <%=user.email%></li>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="bs-callout bs-callout-danger">
          <h1><%=title%></h1>
        </div>

        <div class="bs-callout bs-callout-danger">
        <% if(title == "Update Research"){ %>
          <form method="POST" action="/research/edit/<%=data._id%>">
        <%  } %>
        <% if(title == "Update Teaching"){ %>
          <form method="POST" action="/teaching/edit/<%=data._id%>">
        <%  } %>
        <% if(title == "Update Publication"){ %>
          <form method="POST" action="/publication/edit/<%=data._id%>">
        <%  } %>

            <div id="form-group">
              <label>Title:</label>
              <input class="form-control" name="title" type="text" value="<%= data.title%>"/>
            </div>
            <div id="form-group">
              <label>Body:</label>
              <textarea class="form-control" name="body" value="<%= data.body%>" ></textarea>
            </div><br/>
            <input class="btn btn-primary" type="submit" value="Update"/>
          </form>

        </div>
      </div>
      <!-- resume -->

    </div>
  </div>
</div>
